<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')%>

<body class="boee">
    <div class="loader">
        <div class="loading-animation">
            <img src="images/preload.png" alt="Cargando..." />
        </div>
        <div class="spinner-border text-info" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <%- include('./partials/header')%>
    
    <main class="home__main">
        <section class="home__main__section--carrusel">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="4000">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                  </ol>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/carrusel1.jpg" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/images/carrusel2.jpg" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="images/carrusel3.jpg" alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Siguiente</span>
                </a>
              </div>
        </section>
        <section class="home__main__section">
            <div class="header home__main__section__div">
                <div class="home__main__section--h2">
                    <h2>Productos estelares</h2>
                </div>
                <div class="home__main__section--stars">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
            </div>
            <section class="home__main__section--carruselProductos">
                <div class="glider-contain">
                    <div class="glider">

                        
                        <% products.forEach(({name,image,id, price}) => { %>
                        
                        <a href="/products/productDetail/<%= id %>">
                            <div class="header carousel-products-item " >
        
            <img src="images/products/<%= image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <span class="price-home">$ <%= price %></span>
                <h5 class="card-title"><%= name %></h5>
            </div>
        </div>
    </a>
 
<% }) %>
                    </div>
                    
                    <button aria-label="Previous" class="glider-prev"><i class="fa-solid fa-arrow-left"></i></button>
                    <button aria-label="Next" class="glider-next"><i class="fa-solid fa-arrow-right"></i></button>
                    <!-- <div role="tablist" class="dots"></div> -->
                </div>
            </section>
                <div class="header home__main__section__div--ufo">
                    <img src="images/ufo.png" alt="imagen ufo cat">
                    <h4>Envíos gratis para compras mayores a $5000</h4>
                </div>
                <div class="home__main__section__div--detalles">
                    <div class="header home__main__section__div--pagos">
                        <i class="fa-brands fa-cc-visa"></i>
                        <h4>Aboná como quieras</h4>
                        <p>Aceptamos tarjeta de crédito y débito</p>
                    </div>
                    <div class="header home__main__section__div--seguridad">
                        <i class="fa-solid fa-lock"></i><h4>Comprá con seguridad</h4>
                        <p>Tus datos siempre protegidos</p>
                    </div>
                </div>
        </section>

