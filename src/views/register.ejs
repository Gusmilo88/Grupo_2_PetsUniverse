<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')%>

<body class="register__body">

    <%- include('./partials/header')%>

    <main class="register__main">
        <div class="register__main__div">
            <h3>Creá tu cuenta</h3>
            <form action="/users/register" method="POST" enctype="multipart/form-data">
                <div class="register__main__div--info">
                    <div>
                        <label for="firstName" class="form-label"></label>
                        <i class="fa-solid fa-user"></i><input type="text" class="register__main__div--info <%= (locals.errors && errors.firstName) && 'errorInput'%>" placeholder="<%= locals.errors && errors.firstName ? errors.firstName.msg : "Ingresá tu nombre" %>" name="firstName" id="firstName" value="<%= locals.old && old.firstName ? old.firstName : null %>" autofocus>
                    </div>
                    <div>
                        <label for="lastName" class="form-label"></label>
                        <i class="fa-solid fa-user"></i><input type="text" class="register__main__div--info <%= (locals.errors && errors.lastName) && 'errorInput'%>" placeholder="<%= locals.errors && errors.lastName ? errors.lastName.msg : "Ingresá tu apellido" %>" name="lastName" id="lastName" value="<%= locals.old && old.lastName ? old.lastName : null%>">
                    </div>
                    <div>
                        <label for="email" class="form-label"></label>
                        <i class="fa-regular fa-envelope"></i><input type="email" class="register__main__div--info <%= (locals.errors && errors.email) && 'errorInput'%>" placeholder="<%= locals.errors && errors.email ? errors.email.msg : "Ingresá tu correo electrónico" %>" name="email" id="email" value="<%= locals.old && old.email ? old.email : null%>">
                    </div>
                    <div>
                        <label for="password" class="form-label"></label>
                        <i class="fa-solid fa-lock"></i><input type="password" class="register__main__div--info <%= (locals.errors && errors.password) && 'errorInput'%>" placeholder="<%= locals.errors && errors.password ? errors.password.msg : "Ingresá contraseña" %>" name="password" id="password">
                    </div>
                    <div>
                        <label for="password2" class="form-label"></label>
                        <i class="fa-solid fa-lock"></i><input type="password" class="register__main__div--info <%= (locals.errors && errors.password2) && 'errorInput'%>" placeholder="<%= locals.errors && errors.password2 ? errors.password2.msg : "Confirmar contraseña" %>" name="password2" id="password2">
                    </div>
                    <div>
                        <label for="avatar" class="form-label"></label>
                        <input type="file" class="register__main__div--info" name="avatar" id="avatar">
                    </div>

                </div>
                <div>
                    <input type="checkbox" name="aceptoTerminosYCondiciones" id="aceptoTerminosYCondiciones">
                <label for="aceptoTerminosYCondiciones">Acepto terminos y condiciones</label>
                </div>
                <div class="register__main__div--info--login">
                    <small class="register__main__small--check">
                        ¿Estás registrado? <a href="/users/login">Ingresá</a>
                    </small>
                </div>
                <div class="register__main__div--button">
                    <button type="submit">Registrarse</button>
                </div>

            </form>
        </div>

    </main>
    
    <%- include('./partials/footer')%>
    <%- include('./partials/scripts')%>
</body>
</html>