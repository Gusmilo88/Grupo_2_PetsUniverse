<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')%>

<body>
    <%- include('./partials/header')%>


    <main class="register__main">
        <div class="register__main__div">
            <div class="main__login__div--iniciarSesion">
                <h2>Iniciar sesión</h2>
            </div>
                <form action="" method="POST">
                    <div class="register__main__div--info">
                        <div>
                            <label for="email" class="form-label"></label>
                            <i class="fa-regular fa-envelope"></i><input type="email" class="register__main__div--info <%= (locals.errors && errors.email) && 'errorInput'%>" placeholder="<%= locals.errors && errors.email ? errors.email.msg : "Ingresá tu correo electrónico" %>" name="email" id="email">
                        </div>
                        <div>
                            <label for="password" class="form-label"></label>
                            <i class="fa-solid fa-lock"></i><input type="password" class="register__main__div--info <%= (locals.errors && errors.password) && 'errorInput'%>" placeholder="<%= locals.errors && errors.password ? errors.password.msg : "Ingresá contraseña" %>" name="password" id="password">
                        </div>
                    </div>
                    <div class="register__main__div--button">
                        <button type="submit">Ingresá</button>
                    </div>

            <div>
                <input type="checkbox" name="recordarUsuario" id="recordarUsuario">
                <label for="recordarUsuario">Recordar usuario</label>
            </div>
            <div class="main__login--olvidarContraseña">
                <small> ¿Olvidaste tu contraseña? <a href="/register"> Recuperá tu contraseña</a></small>
            </div>
            <div class="main__login--estasRegistrado">
                <small> ¿No estas registrado? <a href="/users/register"> Registrate </a></small>
            </div>
        </form>
        </div>
    </main>

    <%- include('./partials/footer')%>
    <%- include('./partials/scripts')%>
</body>
</html>


