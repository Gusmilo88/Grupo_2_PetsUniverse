<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')%>
<body class="boee">
    <%- include('./partials/header')%>
    <main class="edit__main">
        <div class="header edit__main__div">
            <h3>Editar Producto: <%= name %></h3>
            <form action="/products/productEdit/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data" id="form-product-edit">
                <div class="edit__main__div--info">
                    <div class="edit__div__div--2">
                        <label for="name">Nombre del producto:</label>
                        <input type="text" id="name" name="name" value="<%= name %>" autofocus>
                        <p class="errorInput" id="nameError"><%= locals.errors && errors.name ? errors.name.msg : null %></p>
                    </div>
                    <div class="edit__div__div--2">
                        <label for="description">Descripción:</label>
                        <textarea id="description" name="description" value="<%= description %>"  min="10" max="100"><%= description %></textarea>
                        <p class="errorInput " id="descriptionError"><%= locals.errors && errors.description ? errors.description.msg : null %></p>
                    </div>
                    <div class="edit__div__div">
                        <div class="edit__div__div--2">
                            <label for="category">Categoría:</label>
                            <select name="category" id="category" value="<%= categories.name %>">
                                <option value="" selected hidden>Seleccione...</option>
                                <% categories.forEach(({name, id}) => { %>
                                  <option value="<%= id %>" <%= id === categoryId && 'selected' %> ><%= name %></option>
                                 <% }) %>
                            </select>
                        </div>
                        <div class="edit__div__div--2">
                            <label for="productType">Tipo de producto:</label>
                            <select name="productType" id="productType">
                                <option value="" selected hidden>Seleccione...</option>
                                <% productoTypes.forEach(({name, id}) => { %>
                                  <option value="<%= id %>" <%= id === productTypeId && 'selected' %> ><%= name %></option>
                                 <% }) %>
                            
                            </select>
                        </div> 
                    </div>
                    <div class="edit__div__div">
                       <div class="edit__div__div--2">
                            <label for="price">Precio:</label>
                            <input type="number" id="price" name="price" value="<%= price %>">
                            <p class="errorInput" id="priceError"><%= locals.errors && errors.price ? errors.price.msg : null %></p>
                        </div>
                        <div class="edit__div__div--2">
                            <label for="weight">Descuento:</label>
                            <input type="number" id="discount" name="discount" value="<%= discount %>">
                            <p class="errorInput" id="discountError"><%= locals.errors && errors.discount ? errors.discount.msg : null %></p>
                        </div> 
                        <div class="edit__div__div--2">
                            <label for="weight">Peso:</label>
                            <input type="number" id="weight" name="weight" value="<%= weight %>">
                            <!-- El peso no lo hacemos obligatorio -->
                        </div> 
                        <div class="edit__div__div--2">
                            <label for="stock">Stock:</label>
                            <input type="number" id="stock" name="stock" value="<%= stock %>">
                            <p class="errorInput" id="stockError"><%= locals.errors && errors.stock ? errors.stock.msg : null %></p>
                        </div> 
                    </div>
                    <div class="edit__div__div">
                       <div class="edit__div__div--2">
                            <label for="image">Imagen:</label>
                            <input type="file" class="form-image" id="image" name="images" value="<%= image %>">
                            <p class="errorInput " id="imageError"><%= locals.errors && errors.image ? errors.image.msg : null %></p>
                        </div>
                    </div>
                <div class="edit__div__div--button">
                    <div class="edit__main__div--button">
                        <button onclick="window.location.href='/productEdit'">Cancelar cambios</button>
                    </div>
                    <div class="edit__main__div--button">
                        <button type="submit">Guardar cambios</button>
                        <p class="text-danger small" id="error-form"></p>
                    </div> 
                </div>    
                
                


            </form>
        </div>
    </main>
    <%- include('./partials/footer')%>

    

    <%- include('./partials/scripts')%>

    


    <script src="/javascripts/productEdit.js"></script>

    <script src="/javascripts/modoOscuro.js"></script>

</body>
</html>